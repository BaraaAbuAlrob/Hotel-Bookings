<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Profile"

    android:background="@drawable/bg_room_update"
    android:orientation="vertical" >

    <androidx.cardview.widget.CardView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="115dp"

        android:layout_marginTop="-35dp"
        android:layout_marginRight="-5dp"
        android:layout_marginLeft="-5dp"

        app:cardCornerRadius="1000dp"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="70dp"
        app:cardBackgroundColor="@color/mainColorOrange"
        app:cardUseCompatPadding="false"
        tools:ignore="VisualLintBounds">

        <TextView
            style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center|bottom"
            android:paddingLeft="20dp"
            android:paddingTop="50dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp"

            android:text="@string/profile"
            android:textColor="@color/mainColorBlack"

            android:textSize="12pt"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="-45dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            tools:ignore="ScrollViewSize">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="210dp"

                android:layout_marginTop="-11dp"
                android:src="@drawable/palestine"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/hotelOwner_HotelOwner"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_user_info"
                android:gravity="start"
                android:padding="10dp"
                android:text="@string/tenant"
                android:textSize="8pt"
                android:textStyle="bold"
                tools:ignore="HardcodedText,TextSizeCheck" />

            <ImageView
                android:id="@+id/profile_ur_photo"
                android:layout_width="110dp"
                android:layout_height="110dp"

                android:layout_gravity="start"
                android:layout_marginTop="-120dp"
                android:padding="20dp"

                android:background="@drawable/bg_profile_img"
                android:src="@drawable/ic_add_photo"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck" />


            <TextView
                android:id="@+id/profile_ur_name"
                style="@style/Widget.Material3.MaterialTimePicker.Display.HelperText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:padding="10dp"

                android:text="ð“‘ð“ªð“»ð“ªð“ª ð“ ð“ð“«ð“¾ð“ð“µð“»ð“¸ð“«"
                android:textColor="@color/black"
                android:textSize="10pt"
                android:textStyle="bold"
                tools:ignore="HardcodedText,TextSizeCheck" />


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="10dp" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_user_info"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="@string/urEmail"
                        android:textColor="@color/black"
                        android:textSize="7pt"
                        android:textStyle="bold"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/profile_ur_email"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="baraabualrub109@gmail.com"
                        android:textSize="7pt"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,TextSizeCheck" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_user_info"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="@string/urPhone"
                        android:textColor="@color/black"
                        android:textSize="7pt"
                        android:textStyle="bold"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/profile_ur_phone"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="+972566040930"
                        android:textSize="7pt"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,TextSizeCheck" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_user_info"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="@string/urPass"
                        android:textColor="@color/black"
                        android:textSize="7pt"
                        android:textStyle="bold"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/profile_pass_text"
                        android:layout_width="200dp"
                        android:layout_height="40dp"

                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="baraa1228"
                        android:textSize="7pt"
                        android:textStyle="bold"

                        android:visibility="gone"

                        tools:ignore="HardcodedText,TextSizeCheck" />

                    <ImageView
                        android:id="@+id/profile_pass_eye"
                        android:layout_width="200dp"
                        android:layout_height="40dp"

                        android:visibility="visible"

                        android:layout_weight="1"
                        android:layout_gravity="start"
                        android:padding="10dp"
                        android:src="@drawable/ic_eye"
                        tools:ignore="ContentDescription" />

                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="10dp"
                android:drawableBottom="@drawable/ic_arrow_down"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:gravity="center"
                android:text="@string/profile_help_text"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="SpUsage,TextSizeCheck,UseCompatTextViewDrawableXml" />

            <Button
                android:id="@+id/edit_ur_info"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginTop="-15dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/mainColorOrange"
                android:text="@string/edit_ur_inf"
                android:textSize="15dp"
                tools:ignore="SpUsage,TextSizeCheck" />

            <Button
                android:id="@+id/del_ur_account"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/mainColorOrange"
                android:text="@string/del_ur_acc"
                android:textSize="15dp"
                tools:ignore="SpUsage,TextSizeCheck" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>